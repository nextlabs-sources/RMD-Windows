<Window x:Class="Test_WPF_Controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lwc="clr-namespace:LoginWPFControl;assembly=LoginWPFControl"
        mc:Ignorable="d"
        Title="MainWindow" 
        Name="main"
        Height="800" Width="1000" 
        WindowStartupLocation="CenterScreen" >
    <TabControl>
        <TabItem Header="SelectServer">
            <lwc:ServerSelectControl Name="sel"/>
        </TabItem>
        
        <TabItem Header="Login">
            <lwc:LoginWebControl Name="web" />
        </TabItem>

        <TabItem Header="FileInfoWindow">
            <Button Click="Button_Click"></Button>
        </TabItem>

    </TabControl>
        
</Window>
