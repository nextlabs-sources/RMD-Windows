<Window x:Class="SkydrmDesktop.rmc.ui.windows.AddExternalRepoWindow.view.AddExternalRepoWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkydrmDesktop.rmc.ui.windows.AddExternalRepoWindow.view"
        xmlns:CustomControl="clr-namespace:CustomControls;assembly=CustomControls"
        xmlns:rmdComponent="clr-namespace:SkydrmLocal.rmc.ui.components"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="{DynamicResource Windows_Defult_Title}" 
        Height="600" Width="900" WindowStartupLocation="CenterScreen" SizeToContent="Height" MaxHeight="800"
        >

    <Grid>
        <Frame x:Name="frm" NavigationUIVisibility="Hidden"/>

        <!--For progress ui display -->
        <Grid x:Name="gridProBar" Grid.RowSpan="2" Background="LightGray" Opacity="0.5" Visibility="{Binding GridProBarVisible}">
            <!--For loading progress background-->
            <rmdComponent:ProBarComponent />
        </Grid>
    </Grid>
    
</Window>
