<Window x:Class="SkydrmLocal.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkydrmLocal"
        xmlns:loadingBar="clr-namespace:SkydrmLocal.rmc.ui.components"
        mc:Ignorable="d"
        Closed="Window_Closed"  
        Title="SkyDRM DESKTOP" Height="600" Width="1000" WindowStartupLocation="CenterScreen">

    
        <!--<Frame Name="login_frame" NavigationUIVisibility="Hidden"/>-->
    <Grid>

        <!--For  protect progress ui display -->
        <Grid x:Name="LoadingBar" Background="LightGray" Opacity="0.5" Visibility="Collapsed">

            <!--For loading progress background-->
            <loadingBar:ProBarComponent />

        </Grid>

        <WebBrowser Name="LoginWeb"/>
    </Grid>
</Window>
